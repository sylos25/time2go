// schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================== ENUMS ==================
enum tip_doc {
  Tarjeta_de_Identidad
  Cedula_de_Ciudadania
  Cedula_de_Extranjeria
  Pasaporte
}

enum tip_rol {
  Usuario
  Promotor
  Administrador
  SuperAdministrador
}

enum estado_pago {
  Pendiente
  Pagado
  Fallido
}

// ================== MODELOS ==================
model tabla_imagenes {
  id_imagen           Int      @id @default(autoincrement())
  url_imagen          String   @unique
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  eventos tabla_eventos[]
}

model tabla_paises {
  id_pais             Int      @id
  nombre_pais         String
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  departamentos tabla_departamentos[]
  usuarios      tabla_usuarios[]
}

model tabla_departamentos {
  id_departamento     Int      @id
  nombre_departamento String
  id_pais             Int
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  pais       tabla_paises   @relation(fields: [id_pais], references: [id_pais])
  municipios tabla_municipios[]
}

model tabla_municipios {
  id_municipio        Int    @id
  id_departamento     Int
  nombre_municipio    String
  distrito            Boolean
  area_metropolitana  Boolean
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  departamento tabla_departamentos @relation(fields: [id_departamento], references: [id_departamento])
  sitios       tabla_sitios[]
  eventos      tabla_eventos[]
}

model tabla_tipo_sitios {
  id_tipo_sitio       Int    @id
  nombre_tipo_sitio   String @unique
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())
  sitios_disc      tabla_sitios_disc[]

  sitios tabla_sitios[]
}

model tabla_sitios {
  id_sitio            Int    @id
  nombre_sitio        String
  id_tipo_sitio       Int
  descripcion         String
  acceso_discapacidad Boolean
  id_municipio        Int
  direccion           String @unique
  latitud             Float  @unique
  longitud            Float  @unique
  telefono            BigInt @unique
  sitio_web           String?
  sitios_disc tabla_sitios_disc[]
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  municipio tabla_municipios @relation(fields: [id_municipio], references: [id_municipio])
  tipo      tabla_tipo_sitios @relation(fields: [id_tipo_sitio], references: [id_tipo_sitio])
  eventos   tabla_eventos[]
}

model tabla_tipo_infraest_disc {
  id_infraest_disc    Int    @id
  nombre_infraest_disc String @unique
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  sitios_disc tabla_sitios_disc[]
}

model tabla_sitios_disc {
  id_sitio           Int
  id_infraest_disc   Int
  id_tipo_sitio      Int 

  sitio              tabla_sitios           @relation(fields: [id_sitio], references: [id_sitio])
  infraest           tabla_tipo_infraest_disc @relation(fields: [id_infraest_disc], references: [id_infraest_disc])
  tipo_sitio         tabla_tipo_sitios      @relation(fields: [id_tipo_sitio], references: [id_tipo_sitio])

  @@id([id_sitio, id_infraest_disc, id_tipo_sitio]) 
}


model tabla_menu {
  id_menu             Int    @id
  nombre_opcion       String @unique
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  menuUsuarios tabla_menu_usuarios[]
}

model tabla_roles {
  id_rol    Int    @id
  nombre_rol String

  usuarios      tabla_usuarios[]
  menuUsuarios  tabla_menu_usuarios[]
}

model tabla_usuarios {
  numero_documento    String  @id
  nombres             String
  apellidos           String
  tipo_documento      tip_doc
  id_pais             Int
  telefono            BigInt? @unique
  validacion_telefono Boolean @default(false)
  correo              String  @unique
  validacion_correo   Boolean @default(false)
  contrasena_hash     String
  fecha_registro      DateTime @default(now())
  fecha_desactivacion DateTime?
  estado              Boolean  @default(true)
  id_rol              Int      @default(1)
  fecha_actualizacion DateTime @default(now())

  pais  tabla_paises @relation(fields: [id_pais], references: [id_pais])
  rol   tabla_roles  @relation(fields: [id_rol], references: [id_rol])

  baneos        tabla_baneados[] @relation("baneadoUsuario")
  baneosRespons tabla_baneados[] @relation("responsableBan")
  eventos       tabla_eventos[]
  valoraciones  tabla_valoraciones[]
  reservas      tabla_reservas_eventos[]
  pagos         tabla_pagos[]
}

model tabla_menu_usuarios {
  id_menu_usuario  Int    @id
  id_rol           Int
  id_menu          Int
  permisos         Boolean @default(false)
  fecha_asignacion DateTime @default(now())
  fecha_revocacion DateTime?

  rol  tabla_roles @relation(fields: [id_rol], references: [id_rol])
  menu tabla_menu  @relation(fields: [id_menu], references: [id_menu])
}

model tabla_baneados {
  id_baneado       Int    @id @default(autoincrement())
  numero_documento String
  motivo_ban       String
  incio_ban        DateTime
  termina_ban      DateTime
  responsable      String
  fecha_registro   DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  usuario      tabla_usuarios @relation("baneadoUsuario", fields: [numero_documento], references: [numero_documento])
  responsableU tabla_usuarios @relation("responsableBan", fields: [responsable], references: [numero_documento])
}

model tabla_categorias_eventos {
  id_categoria_evento Int @id
  nombre              String @unique
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  tipos tabla_tipos_eventos[]
}

model tabla_tipos_eventos {
  id_tipo_evento      Int @id
  id_categoria_evento Int
  nombre              String @unique
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  categoria tabla_categorias_eventos @relation(fields: [id_categoria_evento], references: [id_categoria_evento])
  eventos   tabla_eventos[]
}

model tabla_eventos {
  id_evento           Int @id @default(autoincrement())
  nombre_evento       String
  numero_documento    String
  id_tipo_evento      Int
  id_municipio        Int
  id_sitio            Int
  descripcion         String
  telefono            BigInt  @unique
  fecha_inicio        DateTime
  fecha_fin           DateTime
  dias_semana         String
  hora_inicio         DateTime
  hora_final          DateTime
  costo               Float   @default(0)
  cupo                Int     @default(0)
  estado              Boolean @default(true)
  id_imagen           Int
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())
  fecha_desactivacion DateTime?

  usuario   tabla_usuarios @relation(fields: [numero_documento], references: [numero_documento])
  tipo      tabla_tipos_eventos @relation(fields: [id_tipo_evento], references: [id_tipo_evento])
  municipio tabla_municipios @relation(fields: [id_municipio], references: [id_municipio])
  sitio     tabla_sitios @relation(fields: [id_sitio], references: [id_sitio])
  imagen    tabla_imagenes @relation(fields: [id_imagen], references: [id_imagen])

  valoraciones tabla_valoraciones[]
  reservas     tabla_reservas_eventos[]
  pagos        tabla_pagos[]
}

model tabla_valoraciones {
  id_valoracion       Int @id @default(autoincrement())
  numero_documento    String
  id_evento           Int
  valoracion          Int
  comentario          String?
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @default(now())

  usuario tabla_usuarios @relation(fields: [numero_documento], references: [numero_documento])
  evento  tabla_eventos  @relation(fields: [id_evento], references: [id_evento])
}

model tabla_reservas_eventos {
  id_reserva_evento   Int @id @default(autoincrement())
  numero_documento    String
  id_evento           Int
  fecha_reserva       DateTime @default(now())
  estado              Boolean  @default(true)
  fecha_actualizacion DateTime @default(now())

  usuario tabla_usuarios @relation(fields: [numero_documento], references: [numero_documento])
  evento  tabla_eventos  @relation(fields: [id_evento], references: [id_evento])
}

model tabla_pagos {
  id_pago             Int @id @default(autoincrement())
  numero_documento    String
  id_evento           Int
  ip_transaccion      String @unique
  cant_entrada        Int
  total_pagar         Float
  fecha_pago          DateTime @default(now())
  estado              estado_pago @default(Pendiente)
  metodo_pago         String
  fecha_actualizacion DateTime @default(now())

  usuario tabla_usuarios @relation(fields: [numero_documento], references: [numero_documento])
  evento  tabla_eventos  @relation(fields: [id_evento], references: [id_evento])
}
